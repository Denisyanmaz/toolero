<div class="container show" >
    <div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @tool.photo.attached? ? cl_image_path(@tool.photo.key) : asset_path('hammer.jpeg')%>);">
        <h1><%= @tool.tool_type%></h1>
    </div>
    <div class="content">
      <div class="details card show-page-card">
          <h2 > <strong><%=@tool.tool_type%></strong></h2>
          <p>Brand: <%=@tool.name%></p>
          <p>Costs per Day: <%= @tool.price %>â‚¬</p>
          <p>Tool Description: <%= @tool.description %></p>
      <div>
        <button type="button" class="btn btn-ghost no-1"><%= link_to 'Back to overview', tools_path %></button>
      </div>
      </div>
      <div class="calendar card show-page-card">
          <p>Select the date of your reservation:</p>
          <%= simple_form_for([@tool, @reservation]) do |f| %>
              <%= f.input :start_date %>
              <%= f.input :end_date %>
              <%= f.button :submit, class: "btn btn-ghost" %>
              <% end  %>
      </div>
    </div>
</div>
